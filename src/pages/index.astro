    // æŠ“å–æ‰€æœ‰RSSæº
    async function fetchAllRssSources() {
      try {
        showLoading(true)
        const fetchBtn = document.getElementById('fetchRssBtn')
        const originalText = fetchBtn.innerHTML
        fetchBtn.innerHTML = '<div class="spinner" style="width: 1rem; height: 1rem;"></div> æŠ“å–ä¸­...'
        fetchBtn.disabled = true

        // 1. è·å–æ‰€æœ‰æ´»è·ƒçš„RSSæº
        const { data: rssSources, error: sourcesError } = await supabase
          .from('rss_sources')
          .select('*')
          .eq('is_active', true)

        if (sourcesError) {
          throw new Error('è·å–RSSæºå¤±è´¥: ' + sourcesError.message)
        }

        if (!rssSources || rssSources.length === 0) {
          showError('æ²¡æœ‰æ‰¾åˆ°æ´»è·ƒçš„RSSæº')
          return
        }

        let totalFetched = 0
        let totalErrors = 0

        // 2. é€ä¸ªæŠ“å–RSSæº
        for (const source of rssSources) {
          try {
            console.log(`æ­£åœ¨æŠ“å–: ${source.name}`)
            
            // è°ƒç”¨Supabase Edge Function (è®¾ç½®90ç§’è¶…æ—¶)
            const { data, error } = await supabase.functions.invoke('fetch-rss', {
              body: { 
                rssUrl: source.url, 
                sourceName: source.name,
                verticalName: source.vertical_name
              },
              options: {
                headers: {
                  'Content-Type': 'application/json'
                },
                timeout: 90000 // 90ç§’è¶…æ—¶
              }
            })

            if (error) {
              console.error(`æŠ“å–${source.name}å¤±è´¥:`, error)
              totalErrors++
              continue
            }

            if (data && data.success) {
              totalFetched += data.count || 0
              console.log(`æˆåŠŸæŠ“å–${source.name}: ${data.count}ç¯‡æ–‡ç« `)
            } else {
              console.error(`æŠ“å–${source.name}å¤±è´¥:`, data?.error || 'æœªçŸ¥é”™è¯¯')
              totalErrors++
            }

            // æ·»åŠ å»¶è¿Ÿé¿å…è¿‡äºé¢‘ç¹çš„è¯·æ±‚
            await new Promise(resolve => setTimeout(resolve, 1000))

          } catch (sourceError) {
            console.error(`æŠ“å–${source.name}å‡ºé”™:`, sourceError)
            totalErrors++
          }
        }

        // 3. æ˜¾ç¤ºç»“æœ
        if (totalFetched > 0) {
          showSuccess(`æˆåŠŸæŠ“å– ${totalFetched} ç¯‡æ–‡ç« ï¼${totalErrors > 0 ? ` (${totalErrors}ä¸ªæºå¤±è´¥)` : ''}`)
          // åˆ·æ–°æ–‡ç« åˆ—è¡¨
          await loadArticles()
        } else {
          showError(`RSSæŠ“å–å¤±è´¥ï¼Œå…± ${totalErrors} ä¸ªæºå‡ºé”™`)
        }

      } catch (error) {
        console.error('RSSæŠ“å–å‡ºé”™:', error)
        showError('RSSæŠ“å–å‡ºé”™: ' + error.message)
      } finally {
        showLoading(false)
        const fetchBtn = document.getElementById('fetchRssBtn')
        fetchBtn.innerHTML = '<i data-lucide="rss"></i> æŠ“å–RSS'
        fetchBtn.disabled = false
        lucide.createIcons()
      }
    }

