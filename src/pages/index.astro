          console.log(`â° RSSä¸Šæ¬¡æŠ“å–æ—¶é—´: ${new Date(parseInt(lastFetch)).toLocaleString()}`)
          console.log(`â° ä¸‹æ¬¡è‡ªåŠ¨æŠ“å–è¿˜æœ‰ ${hoursLeft} å°æ—¶`)
